{
  "name": "v-resize-observer",
  "version": "2.1.0",
  "description": "Resize observer for Vue. Detect size changes of DOM elements. Support Vue's directive and component.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.iife.js",
  "jsdelivr": "dist/index.iife.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.esm.js"
    }
  },
  "files": ["dist"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Meqn/v-resize-observer.git"
  },
  "keywords": [
    "vue-resize",
    "vue-resize-observer",
    "vue-resize-component",
    "vue-resize-directive",
    "resize-observer",
    "detect-size",
    "vue",
    "resize",
    "ResizeObserver"
  ],
  "author": "Mervin <mengqing723@gmail.com>",
  "bugs": {
    "url": "https://github.com/Meqn/v-resize-observer/issues"
  },
  "scripts": {
    "clean": "rimraf -rf ./dist",
    "dev": "NODE_ENV=development rollup -c rollup.config.mjs -w",
    "build": "npm run clean && NODE_ENV=production rollup -c rollup.config.mjs"
  },
  "license": "MIT",
  "dependencies": {
    "vue-demi": "latest",
    "resize-observer-polyfill": "^1.5.1"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.7.0",
    "vue": "^2.5.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@vue/composition-api": "^1.7.0",
    "vue": "^3.0.0"
  }
}